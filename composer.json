{
    "name": "just404/flarum-disable-notification-emails",
    "description": "A Flarum extension to disable specific email notifications.",
    "type": "flarum-extension",
    "keywords": [
        "flarum",
        "email",
        "notifications",
        "disable"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "Just404",
            "homepage": "https://just404.eu.org"
        }
    ],
    "support": {
        "source": "https://github.com/your-username/flarum-disable-notification-emails",
        "forum": "https://discuss.flarum.org/d/your-discussion-id"
    },
    "require": {
        "flarum/core": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "Just404\\DisableEmailNotifications\\": "src/"
        }
    },
    "extra": {
        "flarum-extension": {
            "title": "Just404 Email Blocker",
            "category": "feature",
            "icon": {
                "name": "fas fa-envelope-open-text",
                "backgroundColor": "#e74c3c",
                "color": "#fff"
            }
        }
    }
}
